@model Inventario

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="" />
    <meta name="author" content="" />
    <title>Agregar Producto</title>
    <link href="css/Login.css" rel="stylesheet" />
    <script src="https://use.fontawesome.com/releases/v6.3.0/js/all.js" crossorigin="anonymous"></script>
</head>
<body class="">
    <div id="layoutAuthentication">
        <div id="layoutAuthentication_content">
            <main>
                <div class="container">
                    <div class="row justify-content-center">
                        <div class="col-lg-5">
                            <div class="card shadow-lg border-0 rounded-lg mt-5">
                                <div class="card-header"><h3 class="text-center font-weight-light my-4">Agregar Productos</h3></div>
                                <div class="card-body">
                                    <form asp-controller="Admin" asp-action="Create" method="post" enctype="multipart/form-data">
                                        <div>
                                            <label for="Foto"></label>
                                            <input type="file" id="Foto" name="Foto"/>
                                        </div>
                                        <div>
                                            <label asp-for="Nombre"></label>
                                            <input asp-for="Nombre" class="form-control" autocomplete="off" />
                                            <span asp-validation-for="Nombre" class="text-danger"></span>
                                        </div>
                                        <div>
                                            <label asp-for="Marca"></label>
                                            <input asp-for="Marca" class="form-control" autocomplete="off" />
                                            <span asp-validation-for="Marca" class="text-danger"></span>
                                        </div>
                                        <div>
                                            <label asp-for="Precio"></label>
                                            <input asp-for="Precio" class="form-control" autocomplete="off" />
                                            <span asp-validation-for="Precio" class="text-danger"></span>
                                        </div>
                                        <div>
                                            <label asp-for="Cantidad"></label>
                                            <input asp-for="Cantidad" class="form-control" autocomplete="off" />
                                            <span asp-validation-for="Cantidad" class="text-danger"></span>
                                        </div>
                                        <div style="padding-bottom:2px; padding-top:2px">
                                            <label asp-for="Estado"></label> <br />
                                            <select asp-for="Estado">
                                                <option value="">Por favor seleccione un estado</option>
                                                <option value="Normal">Sin Oferta</option>
                                                <option value="Oferta">Oferta</option>
                                            </select>
                                            <span asp-validation-for="Estado" class="text-danger"></span>
                                        </div>
                                        <div>
                                            <label asp-for="PrecioOferta">Precio Oferta en caso de Estado Oferta</label>
                                            <input asp-for="PrecioOferta" class="form-control" autocomplete="off" />
                                            <span asp-validation-for="PrecioOferta" class="text-danger"></span>
                                        </div>
                                        <div>
                                            <label asp-for="Descripcion"></label>
                                            <input asp-for="Descripcion" class="form-control" autocomplete="off" />
                                            <span asp-validation-for="Descripcion" class="text-danger"></span>
                                        </div>
                                        <div class="d-flex align-items-center justify-content-between mt-4 mb-0">
                                            <button type="submit" class="btn btn-primary">Agregar Producto</button>
                                            <a asp-action="Index">Volver al listado</a>
                                        </div>
                                    </form>
                                </div>

                            </div>
                        </div>
                    </div>
                </div>
            </main>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
    <script src="js/scripts.js"></script>
</body>
</html>



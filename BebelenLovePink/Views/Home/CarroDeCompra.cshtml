@{
    ViewData["Title"] = "Bebelen Love Pink";
}
@section Styles {
    <link rel="stylesheet" href="~/css/ItemDetailsStyles.css" asp-append-version="true" />
}
<script src="https://kit.fontawesome.com/57faba85b1.js" crossorigin="anonymous"></script>
@model List<Inventario>
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="" />
    <meta name="author" content="" />
    <title>Shop Item - Start Bootstrap Template</title>
    <!-- Favicon-->
    <link rel="icon" type="image/x-icon" href="assets/favicon.ico" />
    <!-- Bootstrap icons-->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css" rel="stylesheet" />
    <!-- Core theme CSS (includes Bootstrap)-->
    <link href="css/ItemDetailsStyles.css" rel="stylesheet" />
</head>
<body>
    <!-- Navigation-->
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container px-4 px-lg-5">
            <a class="navbar-brand" asp-controller="Home" asp-action="Index">Bebelen Love Pink</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation"><span class="navbar-toggler-icon"></span></button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0 ms-lg-4">
                    <li class="nav-item"><a class="nav-link active" aria-current="page" asp-controller="Home" asp-action="Index">Inicio</a></li>
                    <li class="nav-item dropdown">
                        <a class="nav-link " asp-controller="Home" asp-action="Productos">Tienda</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
    <!-- Product section-->
    <section class="card-body">
        <main>
            <div class="container">
                <div class="row justify-content-center">
                    <div class="col-lg-5">
                        <div class="card shadow-lg border-0 rounded-lg mt-5">
                            <div class="card-header"><h3 class="text-center font-weight-light my-4">Carrito de Compra</h3></div>
                            <div class="card-body">
                                <form>

                                    <div id="productos">
                                        
                                        <img id=".fotoProducto" alt="Imagen del Producto" style="width:45px ; height:45px"/>
                                        <span id=".nombre"></span>
                                        <span id=".precio"></span>
                                        <span id="cantidad"></span>
                                    </div>

                                    <div class="d-flex align-items-center justify-content-end mt-4 mb-0">
                                        <a asp-controller="Admin" class="btn btn-primary">Pagar</a>
                                    </div>
                                    
                                </form>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </main>
    </section>
    <!-- Footer-->
    <!-- Bootstrap core JS-->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
    <!-- Core theme JS-->
    <script src="~/js/RecuperarCarrito.js"></script>
    <script src="js/ItemDescriptionScripts.js"></script>
</body>
</html>

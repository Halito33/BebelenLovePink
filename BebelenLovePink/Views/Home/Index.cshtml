@{
    ViewData["Title"] = "Bebelen Love Pink";
}
@section Styles {
    <link rel="stylesheet" href="~/css/Home.css" asp-append-version="true" />
}
<script src="https://kit.fontawesome.com/57faba85b1.js" crossorigin="anonymous"></script>
@model List<Inventario>
<html>
<body class="container">
        <nav id="carrito">
            <a asp-controller="Admin" asp-action="Login">Login</a>
            <div>
                <i class="fa-solid fa-cart-shopping">
                    <div class="buy-card">
                        <ul class="nav-card">
                            <li>Imagen</li>
                            <li>Nombre</li>
                            <li>Precio</li>
                            <li>Cantidad</li>
                        </ul>
                        <div class="lista">

                        </div>
                        <button id="vaciarCarrito">Vaciar carrito</button>
                    </div>
                </i>

            </div>
        </nav>

        <h1>Bebelen Love Pink</h1>
    @foreach(var productos in Model)
    {
        <div class="grid" id="listaProducto">
            <div class="items">
                <a asp-action="Details" asp-route-id="@productos.Id"><img src="photos/ParcheDeMomento.png" /></a>
                <div class="info">
                    <h3>@productos.Nombre</h3>
                    <p>@productos.Marca</p>
                    <div class="precio">
                        <p>$@productos.Precio</p>
                    </div>
                    <button class="agregarProducto" data-id=@productos.Id>Agregar al Carrito</button>
                </div>
            </div>
        </div>
    }
    <script src="~/js/carrito.js"></script>
</body>
</html>